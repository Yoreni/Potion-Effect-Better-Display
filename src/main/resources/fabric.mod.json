{
  "schemaVersion": 1,
  "id": "potioneffectmod",
  "version": "${version}",

  "name": "Potion Effect Mod",
  "description": "A mod that displays potion effects without opening your inventory while keeping to the theme of the game. When this is installed on the server it also shows durations >30mins.",
  "authors": [
    "Yoreni"
  ],
  "contact": {
    "homepage": "https://github.com/Yoreni/Potion-Effect-Better-Display"
  },

  "license": "CC0-1.0",
  "icon": "assets/potioneffectmod/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "a.yoreni.potioneffectmod.Potioneffectmod"
    ]
  },
  "mixins": [
    "potioneffectmod.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.12.12",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
}
